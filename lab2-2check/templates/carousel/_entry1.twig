{% extends "_layoutQuiz" %}

{% block content %}
<div class="container">
    <a onclick="history.back()" class="back-button">
      <svg
        class="back"
        xmlns="http://www.w3.org/2000/svg"
        width="35"
        height="35"
        viewBox="0 0 24 24"
      >
        <path
          fill="#00263d"
          d="M19 11H7.83l4.88-4.88c.39-.39.39-1.03 0-1.42a.996.996 0 0 0-1.41 0l-6.59 6.59a.996.996 0 0 0 0 1.41l6.59 6.59a.996.996 0 1 0 1.41-1.41L7.83 13H19c.55 0 1-.45 1-1s-.45-1-1-1"
        />
      </svg>
    </a>
    
    {% set entries = craft.entries().section('carousel') %}
    {% for entry in entries %}
  
    <div class="options-container" style="background-image: url('{{ entry.hoofdFotoArtikel.one() ? entry.hoofdFotoArtikel.one().url : '/path/to/default-image.jpg' }}');">
      </div>
    </div>
  <div class="content-overlay">
      <a
      href="gezondheid.twig"
      class="categorie-artikel active"
      data-category="gezondheid"
      >{{entry.artikelCategorie}}</a
    >

      <h1 class="h1-artikel">{{entry.headerArtikel}}</h1>
      <h2 class="h2-artikel">Welke geeft de juiste feiten?</h2>
      <h3 class="h3-artikel">{{entry.juisteFeitenTekst}}</h3>
    <a href="artikelCorrect.twig">
      <div class="option" data-correct="true">
        <h2>{{entry.bewering1Titel}}</h2>
        <p class="source">{{entry.bewerking1Bron}}</p>
        <p>{{entry.bewering1Uitleg}}</p>
      </div>
    </a>

      <div class="line-container">
        <div class="lijn"></div>
        <p class="of">Of</p>
        <div class="lijn"></div>
      </div>

       <a href="artikelFout.twig">
      <div class="option" data-correct="false">
        <h2>{{entry.bewerking2Titel}}</h2>
        <p class="source">{{entry.bewerking2Bron}}</p>
        <p>{{entry.bewerking2Uitleg}}</p>
      </div>
      </a>
      <div class="line-container">
          <div class="lijn"></div>
            <p class="of">Of</p>
          <div class="lijn"></div>
      </div>
      
      <a class="button_9 button" href="artikelOverslaan.twig">Overslaan</a>
      </div>
  {% endfor %}

 {% endblock  %}
